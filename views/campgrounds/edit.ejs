<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		
<h1 style="text-align:center;">
	EDIT <%= campgrounds.name%>
</h1>
		
<div style="width:35%;  margin:30px auto";>
	
		
<form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST">
	
	<div class="form-group">
			<input class="form-control" type="text"  name="campgrounds[name]" value="<%=campgrounds.name%>">
	</div>
	<div class="form-group">
			<input class="form-control" type="number"  name="campgrounds[price]" value="<%=campgrounds.price%>" min="0.01" step="0.01">
	</div>
	<div class="form-group">
		<input class="form-control" type="text" name="campgrounds[image]" value="<%=campgrounds.image%>">
	</div>
	
	<div class="form-group">
		<input class="form-control" type="text" name="campgrounds[description]" value="<%=campgrounds.description%>">
	</div>
	
	<div class="form-group">
		<button class="btn btn-success btn-lg btn-block">
				Submit
	    </button>
	</div>
	
</form>
	<a href="/campgrounds/<%=campgrounds._id%>">Go Back</a>
	</div>

    </div>
</div>

<%- include("../partials/footer") %>