<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				YelpCamp
			</p>
			<div class="list-group">
				<li class="list-group-item active">info 1</li>
				<li class="list-group-item">info 2</li>
				<li class="list-group-item">info 3</li>
			</div>
			<a class="btn btn-xs btn-warning" href="/campgrounds">Go Back</a>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=campgrounds.image %>">
				<div class="caption">
					<h4 class="pull-right">
						$<%=campgrounds.price%>/night
					</h4>
					<h4>
	                 <a> <%= campgrounds.name%></a>
                    </h4>
					<p>
		                  <%= campgrounds.description%>
                    </p>    
					<p><em> submiited by <%= campgrounds.author.username %>
						</em>
					</p>
					<%	if(currentUser && campgrounds.author.id.equals(currentUser._id)) { %>
					<button class="btn  btn-warning">
				        <a id="Edit-Button" href="/campgrounds/<%=campgrounds._id %>/edit" >Edit</a>
					</button>
					<form id="delete-form" action="/campgrounds/<%=campgrounds._id %>?_method=delete" method="POST">
						<button  class="btn  btn-danger">
							Delete
						</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a  class="btn  btn-success" href="/campgrounds/<%= campgrounds._id%>/comments/new">
						Add New Comments
					</a>
				</div>
				<hr>
				<% campgrounds.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 Days Ago</span>
						<p>
			                <%= comment.text %>
			            </p>
						<%	if(currentUser && comment.author.id.equals(currentUser._id)) { %>
						<a class="btn btn-xs btn-warning" href="/campgrounds/<%= campgrounds._id%>/comments/<%= comment._id%>/edit">Edit</a>
						<form id="delete-comment" action="/campgrounds/<%= campgrounds._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">
								DELETE
							</button>
							<%	} %>
						</form>
					</div>
				</div>
	<% });%>
			</div>
		</div>
	</div>
</div>




		
<%- include("../partials/footer") %>